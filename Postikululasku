// Ohjelma, joka kysyy kirjeen painon (g), jonka jälkeen tulostaa sen postimaksun alla olevan
taulukon mukaan euroina (sentteinä) ja Englannin puntina.
*/

#include <iostream>
using namespace std;

int main()
{
	float kirje;
	cout << "Anna kirjeen paino: \n";
	cin >> kirje;
	if (kirje <= 50)
		cout << "2,80 Euroa" << " 2,35 Englannin puntaa";
	else if ((kirje > 50) && (kirje <= 500))
		cout << "3,50 Euroa" << " 2,93 Englannin puntaa";
	else if ((kirje > 500) && (kirje <= 1000))
		cout << "5,60 Euroa" << " 4,69 Englannin puntaa ";
	else
		cout << "7,00 Euroa" <<  " 5,87 Englannin puntaa";

	return 0;

}
