#include <iostream>
#include <windows.h>
#pragma execution_character_set( "utf-8" )

using namespace std;

int main(void)
{
  SetConsoleOutputCP(65001);
    
        string merkki = "*";

        for (int i = 0; i > -8; --i)
        {
            cout  << merkki << "\t";
            merkki += "*";
            cout << "\n";
        }
        return 0;
    }
