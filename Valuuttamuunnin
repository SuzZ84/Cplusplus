Comments: Ohjelma muuntaa annetun euromäärän ruotsin kruunuiksi. Ohjelmassa käytetään funktiota.
*/

#include <iostream>
#include <string>
using namespace std;

float eurMuunnin(float eurot, float kerroin)
{

	return (eurot * kerroin);

}

int main()

{					
	float eurot = 0;
	float kruunut = 0;
	float kerroin = 10.53;

	cout << "Anna euromaara: " << endl;
	cin >> eurot;

	kruunut = eurMuunnin(eurot, kerroin);

	// muuttujien määrittely
	cout << eurot << " euroa on " << kruunut << " kruunua." << endl;
	return 0;
}

